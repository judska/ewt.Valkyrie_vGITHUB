{game_entity
	(include "/properties/tank.ext")
	(include "/properties/selection/vehicle.inc" scale(1.2))
	{props "medium" "-turret" "vision_vehicle_medium" "muzzle_medium"}
	{PatherId "tank"}
	
	{Volume "Body1"
		{tags "body"}
		{component "body"}
	}
	{Volume "Body2"
		{tags "body"}
		{component "body"}
	}
	
	("armor_spa_light" armor(30 25 25 15))
	
	{boarder
		{anm "driver"
			{forward	{begin	"board_tank_left"} {end "seat_gunner_moto"}}
			{reverse 	{end	"emit_tank_1_hold"}}
		}
		{anm "gunner"
			{forward	{begin	"board_tank_right"} {end "pose_pak40_gunlayer"}}
			{reverse 	{end	"emit_tank_2_hold"}}
		}
		{anm "gunner2"
			{forward	{begin	"board_tank_left"} {end "pose_mgun_pz6"}}
			{reverse 	{end	"emit_tank_2_hold"}}
		}
	}

	(define "crew_human"
		{placer
			{place "%place" {group "crew"} {linkbone "%place"} {turnoff {sensor} {shadow}}}
		}
		{boarder
			{door "%door1"}
			{door "%door2"}
			{link "%door1" "%place" {anm "%place"} {forward putoff} {reverse puton}}
			{link "%door2" "%place" {anm "%place"} {forward putoff} {reverse puton}}
		}
	)

	("crew_human" place(driver)		door1(emit1))
	("crew_human" place(gunner)	    	door1(emit2))
	("crew_human" place(gunner2)		door1(emit1))

	;("seat_human" place(seat1) bone(seat01) door(emit3)  animation(armor))
	;("seat_human" place(seat2) bone(seat02) door(emit4)  animation(armor))
	;("seat_human" place(seat3) bone(seat03) door(emit5)  animation(armor))
	;("seat_human" place(seat4) bone(seat04) door(emit6)  animation(armor))
	
	
	{placer
		{place "driver" {visor "driver"}}
		{place "gunner" {visor "main"}}
		{place "gunner2" {visor "human"} {openForCrush}}
	}
	
	{sensor
		{visor "main"
			{bone "gun_rot1"}
		}
		{visor "human"
			{bone "mgun_rot"}
			{vision "human"}
		}
	}
	
	{extender "inventory"
		{box
			{item "ammo mgun" 1104}
			{item "ammo pistol" 120}
			{item "oto_mod35 grenade" 5}
			{item "bullet75 ap" 25}
			{item "bullet75 fg" 17}
			{item "mab_38a" filled}
		}
	}
